{
  "name": "@mangayomu/root",
  "version": "1.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "components/*",
      "services/*",
      "apps/mobile",
      "apps/nextjs",
      "apps/backend"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native-*",
      "**/@react-native",
      "**/@react-native/*",
      "**/@react-native-community/*",
      "**/@react-native-*",
      "**/next",
      "**/@spartiuz/chromium-min",
      "**/@realm",
      "**/@realm/*",
      "**/realm",
      "**/realm/*"
    ]
  },
  "scripts": {
    "build": "yarn nx run-many --target=build --exclude=@mangayomu/nextjs",
    "reset": "yarn nx run-many --target=reset --all",
    "postreset": "rm -rf yarn.lock && rmdir node_modules /s /q",
    "test": "yarn nx run-many --target=test --all",
    "android:metro": "yarn workspace @mangayomu/mobile start",
    "android:start": "yarn workspace @mangayomu/mobile android",
    "start:web": "yarn --cwd apps/nextjs start",
    "build:web": "yarn --cwd apps/nextjs build && yarn build",
    "dev:web": "yarn workspace @mangayomu/nextjs dev",
    "syncdeps": "syncpack fix-mismatches"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "8.43.0",
    "eslint-config-prettier": "^8.6.0",
    "nx": "^16.4.0",
    "syncpack": "^12.3.0"
  },
  "packageManager": "yarn@3.3.1",
  "engines": {
    "node": ">=18"
  },
  "resolutions": {
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.6"
  }
}
