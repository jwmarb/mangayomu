{
  "name": "@mangayomu/root",
  "version": "1.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "components/*",
      "services/*",
      "apps/mobile"
    ]
  },
  "scripts": {
    "reset": "npm --workspaces run reset --if-present && rimraf yarn.lock && rimraf node_modules && yarn",
    "android:metro": "yarn workspace @mangayomu/mobile start",
    "android:start": "yarn workspace @mangayomu/mobile android"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "nx": "^15.5.1",
    "typescript": "^4.9.4"
  },
  "packageManager": "yarn@3.3.1"
}
