{
  "name": "@mangayomu/root",
  "version": "1.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "components/*",
      "services/*",
      "apps/mobile"
    ],
    "nohoist": [
      "**/react",
      "**/react-dom",
      "**/react-native",
      "**/react-native/**",
      "**/use-latest-callback"
    ]
  },
  "scripts": {
    "reset": "npm --workspaces run reset --if-present && rimraf yarn.lock && rimraf node_modules"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "nx": "^15.5.1",
    "typescript": "^4.9.4"
  }
}
