{
  "name": "@mangayomu/root",
  "version": "1.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "components/*",
      "services/*",
      "apps/mobile"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native-*",
      "**/@react-native-community/*",
      "**/@react-native-*"
    ]
  },
  "scripts": {
    "build": "npx nx run-many --target=build --all",
    "reset": "npx nx run-many --target=reset --all && rimraf yarn.lock && rimraf node_modules",
    "test": "npx nx run-many --target=test --all",
    "android:metro": "yarn workspace @mangayomu/mobile start",
    "android:start": "yarn workspace @mangayomu/mobile android"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "nx": "^16.3.2"
  },
  "packageManager": "yarn@3.3.1"
}
